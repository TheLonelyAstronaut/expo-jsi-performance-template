{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom"],
    "types": ["reflect-metadata"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@core": ["./src/core"],
      "@app": ["./src/app"],
      "@features/*": ["./src/features/*"]
    }
  },
  "extends": "expo/tsconfig.base"
}
